


<div class="col-md-6 col-md-offset-3">
	<div class="new-item-form">
		<h1> Edit Item </h1>

		<%= simple_form_for @item, :html => { :multipart => true } do |f| %>
		<div class="new-review-form-row">
			<div class="col-md-6">
			<%= f.select :category_id, @categories, class: "form form-group form-control" %>

			</div>
			<div class="col-md-6">
				<%= f.file_field :item_img,  class: "form form-group form-control" %>
			</div>
		</div>
		<%= f.input :title, label: "Item Title" %>
		<%= f.input :description %>
		<%= f.input :maker %>

		<%= f.button :submit, class: "btn-custom", style: "margin-left:0px;"  %>

		<% end %>
	</div>
</div>
