<%= simple_form_for @item, :html => { :multipart => true } do |f|  %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
<%= f.file_field :item_img %>
<%= f.input :title, label: "Item Title" %>
<%= f.input :description %>
<%= f.input :maker %>

<%= f.button :submit %>

<% end %>